{% extends 'base.html.twig' %}

{% block title %}Connectez-vous{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-6" style="margin: auto;">
                <form method="post" class="my-5">
                   
                    
                
                        <h3>Connectez-vous à votre compte</h3>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="form-group">
                          <label for="exampleInputEmail1">Email</label>
                          <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus placeholder="Email">
                          <small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais votre e-mail avec qui que ce soit.</small>
                        </div>
                        <div class="form-group">
                          <label for="exampleInputPassword1">Mot de passe</label>
                          <input type="password" name="password" id="inputPassword" class="form-control" required placeholder="Mot de passe">
                        </div>
                        <div class="form-check">
                          <p>Vous n'avez pas de compte? <a href="{{ path('app_siginup') }}">créez-en un maintenant</a> c'est gratuit</p>
                        </div>

                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        
                        <button type="submit" class="btn btn-primary">se connecter</button>
                </form>

                      
            </div>
        </div>
    </div>
{% endblock %}
